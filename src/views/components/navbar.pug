                            svg.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                                path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01')

            button(class={'hidden': user.Categories.length == 0})#btn-search
                svg.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z')
            div(class="hidden md:block").relative.mt-2
                button#user-button
                    img(src=`https://ui-avatars.com/api/?name=${user.name}`).bg-gray-600.rounded-full.w-8

                #user-container.absolute.right-0.w-60.p-3.bg-white.border.rounded-lg.shadow.hidden.z-10
                    .flex.items-center.space-x-2.py-2
                        img(src=`https://ui-avatars.com/api/?name=${user.name}`).bg-gray-600.rounded-full.w-10
                        p.text-gray-700.text-xl.truncate #{user.name}
                    hr
                    form(action="/logout" method="post") 
                        button(type="submit").text-red-500.py-2.px-2.block.w-full.text-left Cerrar sesion

    div#container-search.hidden.mt-4.relative
        input#txt-search.w-full.border.border-gray-300.h-10.px-5.pr-10.rounded-full.text-sm(type='search' name='search-category' placeholder='Buscar mis categorias' class='focus:outline-none' required='')
        #results-search.hidden.absolute.bg-white.top-12.inset-x-0.p-4.w-full.z-50.rounded-lg.shadow-lg.space-y-4

