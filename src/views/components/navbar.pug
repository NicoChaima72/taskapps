.navbar.py-5
    .flex.justify-between.items-center.text-gray-500
        if namePage == 'pages.home'
            h3.font-bold.text-3xl.text-gray-700.cursor-default.my-2 #{title}
        else
            a#btn-back
                svg.w-6.text-gray-700(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor')
                    path(fill-rule='evenodd' d='M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z' clip-rule='evenodd')

        .flex.space-x-5.items-center
            if namePage != 'pages.home'
                a(href="/" class="hidden md:block").mr-2 
                    svg.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
