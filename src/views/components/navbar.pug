                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z')
            #user-container-bottom.absolute.bottom-0.w-60.p-3.bg-white.border.rounded-lg.hidden.shadow.z-10(style="bottom: 3rem; right: -2.8rem")
                    .flex.items-center.space-x-2.py-2
                        img(src=`https://ui-avatars.com/api/?name=${user.name}`).bg-gray-600.rounded-full.w-10
                        p.text-gray-700.text-xl.truncate #{user.name}
                    hr
                    form(action="/logout" method="post").mt-1
